@model Quero2pay.Models.Funcionario

<div class="container-fluid header-page-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Cadastro</h1>
                <p>Dados completos do funcionário</p>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12 mg-botton">
            <a href='javascript:history.go(-1)' class="btn btn-link btn-tabela"><span class="glyphicon glyphicon-menu-left"></span> Voltar</a>
        </div>
        <div class="col-md-4">
            <img class="img-empresa" src="../../img/funcionario.jpeg">
        </div>
        <div class="col-md-8">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.nome)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nome)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Cargo.nmCargo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Cargo.nmCargo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Empresa.nmEmpresa)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Empresa.nmEmpresa)
                </dd>
            </dl>

            <div class="cargo-link">
                <button type="button" class="btn btn-link">
                    <span class="glyphicon glyphicon-edit"></span>
                    @Html.ActionLink("Editar funcionário", "Edit", new { id = Model.idFuncionario })
                </button>
            </div>
        </div>
    </div>
</div>
