@model Quero2pay.Models.Funcionario

<div class="container-fluid header-page-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Cadastro</h1>
                <p>Alterar cadastro de funcionário</p>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <button type="submit" class="btn btn-link"><span class="glyphicon glyphicon-menu-left"></span>@Html.ActionLink("Voltar", "Details", "Empresa", new { id = Model.idEmpresa }, null)</button>
            <div class="col-md-12">
                <form>
                    <div class="form-group">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.idFuncionario)
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.idCargo, "Cargo", htmlAttributes: new { @class = "control-label" })

                            @Html.DropDownList("idCargo", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.idCargo, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.idEmpresa, "Empresa", htmlAttributes: new { @class = "control-label" })

                            @Html.DropDownList("idEmpresa", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.idEmpresa, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk"></span> Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
