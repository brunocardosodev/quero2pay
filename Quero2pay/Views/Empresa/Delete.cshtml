@model Quero2pay.Models.Empresa

<div class="container-fluid header-page-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Cadastro</h1>
                <p>Formulário de remoção de empresa</p>
            </div>
        </div>
    </div>
</div> 

<div class="container">
    <div class="alert alert-danger" role="alert">
        <p><strong>Deseja remover</strong> este registro?</p>
    </div>
    <div class="row">
        <div class="col-md-12 mg-botton">
            <a href='javascript:history.go(-1)' class="btn btn-link btn-tabela"><span class="glyphicon glyphicon-menu-left"></span> Voltar</a>
        </div>
        <div class="col-md-4">
            <img class="img-empresa" src="../../img/quero2.jpeg">
        </div>

        <div class="col-md-8 dados-empresa">    
            <dl class="dl-horizontal">
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.nmEmpresa)
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.nmEmpresa)
                </dd>
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.rua) /
                    @Html.DisplayNameFor(model => model.numero)
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.rua),
                    @Html.DisplayFor(model => model.numero)
                </dd>
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.bairro) 
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.bairro) 
                </dd>
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.cidade) /
                    @Html.DisplayNameFor(model => model.estado)
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.cidade) -
                    @Html.DisplayFor(model => model.estado)
                </dd>
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.cep)
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.cep)
                </dd>
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.numero)
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.numero)
                </dd>
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.nuTelefone)
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.ddd)
                    @Html.DisplayFor(model => model.nuTelefone)
                </dd>
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.complemento)
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.complemento)
                </dd>
            </dl>
        </div>
    </div>

    <div class="row cadastro-funcionarios">
        <div class="col-md-12">
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Remover</button>
            }
        </div>
    </div>
</div>



