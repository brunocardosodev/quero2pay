@model Quero2pay.Models.Empresa
@{
    ViewBag.Title = "Details";
}

<div class="container-fluid header-page-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Detalhes</h1>
                <p>Dados completos da empresa</p>
            </div>
        </div>
    </div>
</div> 

<div class="container">
    <div class="row">
        <div class="col-md-12 mg-botton">
            <button type="submit" class="btn btn-link"><span class="glyphicon glyphicon-menu-left"></span>@Html.ActionLink("Voltar", "Index")</button>
        </div>
        <div class="col-md-4">
            <img class="img-empresa" src="../../img/quero2.jpeg">
        </div>
        <div class="col-md-8 dados-empresa">    
            <dl class="dl-horizontal">
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.nmEmpresa)
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.nmEmpresa)
                </dd>
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.rua) /
                    @Html.DisplayNameFor(model => model.numero)
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.rua),
                    @Html.DisplayFor(model => model.numero)
                </dd>
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.bairro) 
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.bairro) 
                </dd>
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.cidade) /
                    @Html.DisplayNameFor(model => model.estado)
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.cidade) -
                    @Html.DisplayFor(model => model.estado)
                </dd>
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.cep)
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.cep)
                </dd>
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.numero)
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.numero)
                </dd>
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.nuTelefone)
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.ddd)
                    @Html.DisplayFor(model => model.nuTelefone)
                </dd>
                <dt class="mg-zero">
                    @Html.DisplayNameFor(model => model.complemento)
                </dt>
                <dd class="mg-zero">
                    @Html.DisplayFor(model => model.complemento)
                </dd>
            </dl>
        </div>
    </div>

    <div class="row cadastro-funcionarios">
        <div class="col-md-12">
            @Html.Partial("_ListaFuncionarios", Model.Funcionarios)
        </div>
    </div>
</div>


