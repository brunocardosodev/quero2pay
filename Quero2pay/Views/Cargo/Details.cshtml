@model Quero2pay.Models.Cargo

@{
    ViewBag.Title = "Details";
}

<div class="container-fluid header-page-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Detalhes</h1>
                <p>Dados completos da cargo</p>
            </div>
        </div>
    </div>
</div> 

<div class="container">
    <div class="row">
        <div class="col-md-12 mg-botton">
            <a href='javascript:history.go(-1)' class="btn btn-link btn-tabela"><span class="glyphicon glyphicon-menu-left"></span> Voltar</a>
        </div>
        <div class="col-md-4">
            <img class="img-empresa" src="../../img/cargo.jpeg">
        </div>

        <div class="col-md-8">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.nmCargo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nmCargo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.salario)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.salario)
                </dd>
            </dl>

            <div class="cargo-link">
                <button type="button" class="btn btn-link">
                    <span class="glyphicon glyphicon-edit"></span>
                    @Html.ActionLink("Editar cargo", "Edit", new { id = Model.idCargo })
                </button>
            </div>
        </div>
    </div>
</div>
