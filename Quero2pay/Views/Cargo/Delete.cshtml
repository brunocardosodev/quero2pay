@model Quero2pay.Models.Cargo

@{
    ViewBag.Title = "Delete";
}

<div class="container-fluid header-page-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Cadastro</h1>
                <p>Formulário de remoção do cargo</p>
            </div>
        </div>
    </div>
</div> 

<div class="container">
    <div class="alert alert-danger" role="alert">
        <p><strong>Deseja remover</strong> este registro?</p>
    </div>
    <div class="row">
        <div class="col-md-12 mg-botton">
            <a href='javascript:history.go(-1)' class="btn btn-link btn-tabela"><span class="glyphicon glyphicon-menu-left"></span> Voltar</a>
        </div>
        <div class="col-md-4">
            <img class="img-empresa" src="../../img/quero2.jpeg">
        </div>

        <div class="col-md-8 dados-empresa">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.nmCargo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nmCargo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.salario)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.salario)
                </dd>

            </dl>
        </div>
    </div>

    <div class="row cadastro-funcionarios">
        <div class="col-md-12">
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Remover</button>
            }
        </div>
    </div>
</div>
